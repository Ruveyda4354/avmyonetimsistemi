@using System.Reflection.Emit
@model List<VeriTabaniProje.Models.Personel>

@section Styles {
	<link rel="stylesheet" href="/css/kat.css" />
}
<div class="kat-background">
	<div class="d-flex justify-content-between w-100">
		<h2>Personeller</h2>
		<form method="get" asp-action="Index" class="mb-3 d-flex">
			<input type="text" name="search" value="@Context.Request.Query["search"]" class="form-control me-2"
				placeholder="Personel ara..." />
			<button type="submit" class="btn btn-primary">Ara</button>
		</form>
		<a asp-action="Create" asp-controller="Personel" class="btn btn-success mt-1" role="button"><i
				class="bi bi-plus-square">Ekle</i></a>
	</div>
	<table class="table table-stripped table-dark border">
		<thead>
			<tr>
				<th scope="col">Profil</th>
				<th scope="col">Personel No</th>
				<th scope="col">Kat No</th>
				<th scope="col">Personel Adı</th>
				<th scope="col"></th>
			</tr>
		</thead>
		<tbody>
			@foreach (Personel personel in Model)
			{
				var fotoDosya = personel.Profilfoto;

				<tr>
					<td>
						<div>
							<img src="~/images/profil/profil//@fotoDosya" alt="profil Foto"
								style="width:20%;height:5%;border-radius:50%;margin-right:10px;">
						</div>
					</td>>
					<td>
						@personel.Personelno
					</td>
					<td>
						@personel.Katno
					</td>
					<td>
						@personel.Adi @personel.Soyadi
					</td>
					<td>
						<div class="d-flex flex-column g-1">
							<a asp-action="Edit" asp-route-id="@personel.Personelno" asp-asp-controller="Personel"
								class="btn btn-primary mt-1" role="button"><i class="bi bi-pencil-square">Düzenle</i></a>
							<a asp-action="Delete" asp-route-id="@personel.Personelno" asp-controller="Personel"
								class="btn btn-danger mt-1" role="button"><i class="bi bi-trash">Sil</i></a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>