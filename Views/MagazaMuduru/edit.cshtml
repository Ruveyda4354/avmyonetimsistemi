@model VeriTabaniProje.Models.Magazamuduru
@section Styles {
    <link rel="stylesheet" href="/css/kat.css">
}

<div class="kat-background">
    <h2 style="color:white;">@Model.Magazamuduruno - Nolu Mağaza Müdürü Düzenle</h2>
    <div class="main-content w-100" style="padding-top:20px;">
        <div class="w-100">

            <form asp-action="Edit" asp-controller="Magazamuduru" enctype="multipart/form-data" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Magazamuduruno" />
                <table class="table table-stripped table-dark border">
                    <thead>
                        <tr>
                            <th>Profil</th>
                            <th>Adı</th>
                            <th>Soyadı</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <img src="~/images/profil/profil/@Model.Profilfoto" alt="Profil Foto"
                                    style="width:50px; height:50px; border-radius:50%; margin-right:10px; object-fit:cover;">
                                <input type="file" name="Foto" />
                            </td>
                            <td>
                                <input type="text" asp-for="Adi" class="form-control" name="Ad" />
                            </td>
                            <td>
                                <input type="text" asp-for="Soyadi" class="form-control" name="Soyad" />
                            </td>

                            <td>
                                <button type="submit" class="btn btn-success">Güncelle</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </form>
        </div>
    </div>
</div>