@model VeriTabaniProje.Models.Kat
@section Styles {
    <link rel="stylesheet" href="/css/kat.css">
}

<div class="kat-background">
    <h2 style="color:white;">@Model.Katno Kat - Personel Düzenle</h2>
    <div class="main-content w-100" style="padding-top:20px;">
        <div class=" w-100">
            <table class="table table-stripped table-dark border">
                <thead>
                    <tr>
                        <th>Personel Adı</th>
                        <th>Mevcut Kat</th>
                        <th>Yeni Kat</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Personel p in Model.Personels)
                    {
                        <tr>
                            <td>@p.Adi</td>
                            <td>@p.Katno</td>
                            <td>
                                <form asp-controller="Personel" asp-action="KatGuncelle" method="post" class="d-flex">
                                    <input type="hidden" name="Personelno" value="@p.Personelno" />

                                    <select name="YeniKat" class="form-control me-2">
                                        <option value="0" selected="@(p.Katno == 0 ? "selected" : null)">0. Kat</option>
                                        <option value="1" selected="@(p.Katno == 1 ? "selected" : null)">1. Kat</option>
                                        <option value="2" selected="@(p.Katno == 2 ? "selected" : null)">2. Kat</option>
                                    </select>
                                    <button type="submit" class="btn btn-success">Güncelle</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>